<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:backgroundTintMode="screen"
    android:backgroundTint="@color/material_dynamic_secondary20"
    android:background="@color/material_dynamic_primary95"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Konichiwaa!!"
        android:textSize="30sp"
        android:fontFamily="cursive"
        />
    <EditText
        android:id="@+id/edtmes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="Enter Message For Notification"
        android:backgroundTint="@color/material_dynamic_primary70"
        />
    <Button
        android:id="@+id/btnSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:text="Send"
        android:layout_marginTop="20dp"
        />
</LinearLayout>